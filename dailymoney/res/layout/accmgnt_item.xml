<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView
		android:id="@+id/accmgnt_item_name"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
	<TextView
		android:id="@+id/accmgnt_item_initvalue"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/accmgnt_item_name"
		android:layout_alignParentRight="true"
		android:layout_marginRight="10sp" />
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toLeftOf="@id/accmgnt_item_initvalue"
		android:layout_alignTop="@id/accmgnt_item_initvalue"
		android:text="@string/label_initial_value"
		android:layout_marginRight="10sp" />
    
    <!-- debug -->
    <TextView
        android:id="@+id/accmgnt_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/accmgnt_item_name"
        android:layout_alignParentLeft="true"
        android:textStyle="italic"
        android:textSize="10sp"
        android:layout_marginLeft="10sp" />		
</RelativeLayout>
